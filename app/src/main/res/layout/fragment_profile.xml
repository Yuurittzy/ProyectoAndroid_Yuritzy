<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    tools:context=".profile.ProfileFragment">

    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/yuu_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksandbold"
        android:text="@string/greeting"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:drawablePadding="16dp"
        android:fontFamily="@font/quicksandmedium"
        android:text="@string/favourites"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/ic_favourite_full"
        app:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:drawablePadding="16dp"
        android:fontFamily="@font/quicksandmedium"
        android:text="@string/shopping_cart"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/ic_shopping_cart"
        app:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:drawablePadding="16dp"
        android:fontFamily="@font/quicksandmedium"
        android:text="@string/my_addresses"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/ic_home"
        app:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:drawablePadding="16dp"
        android:fontFamily="@font/quicksandmedium"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/ic_edit"
        app:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:drawablePadding="16dp"
        android:fontFamily="@font/quicksandmedium"
        android:text="@string/assistance"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/ic_assistance"
        app:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile" />

</LinearLayout>