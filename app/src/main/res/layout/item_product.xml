<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape">

    <TextView
        android:id="@+id/tv_namebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/quicksandmedium"
        android:paddingStart="16dp"
        android:paddingTop="22dp"
        android:paddingEnd="16dp"
        android:text="@string/naruto"
        android:textAlignment="center"
        android:textSize="@dimen/font_size4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:paddingBottom="22dp"
        android:id="@+id/iv_box"
        android:layout_marginTop="16dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/naruto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_namebox" />


</androidx.constraintlayout.widget.ConstraintLayout>