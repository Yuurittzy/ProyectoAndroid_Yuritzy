<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_product"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_xmedium"
    android:background="@drawable/shape">

    <TextView
        android:id="@+id/tv_namebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksandmedium"
        android:paddingStart="@dimen/space_xlarge"
        android:paddingTop="@dimen/space_xlarge"
        android:paddingEnd="@dimen/space_xlarge"
        android:text="@string/naruto"
        android:textAlignment="center"
        android:textSize="@dimen/font_size4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_box"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/space_large"
        android:paddingBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_namebox"
        tools:src="@drawable/naruto" />

</androidx.constraintlayout.widget.ConstraintLayout>